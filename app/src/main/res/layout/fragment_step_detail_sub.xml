<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.StepDetailSubFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="64dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="48dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/detail_step_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-8dp"
                        android:textColor="#5000"
                        android:textSize="128sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-24dp"
                        android:text="@string/step_detail_middle_of_numbers"
                        android:textColor="#3000"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/detail_step_total_numbers_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:textColor="#5000"
                        android:textSize="32sp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/detail_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="big ass title as placeholder just to make sure everything is looking good =D"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="24sp"
                    />

                <TextView
                    android:id="@+id/detail_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-regular"
                    android:text="30 de dezembro de 1999"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/detail_description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="19dp"
                    android:fontFamily="sans-serif-regular"
                    android:text="Aliquam vestibulum egestas neque vel rutrum. Mauris et faucibus lectus. Pellentesque ut nisi eros. Aliquam erat volutpat. Suspendisse vitae dolor luctus, tincidunt orci sagittis, maximus ex. Suspendisse potenti. Sed sit amet scelerisque metus. Aenean auctor, odio vel scelerisque gravida, purus sapien euismod sem, at pharetra arcu felis nec est. Phasellus scelerisque ultrices imperdie."
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:id="@+id/detail_links_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>
</ScrollView>
