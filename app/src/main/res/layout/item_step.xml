<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="0dp"
                                    android:padding="8dp"
                                    app:cardCornerRadius="6dp"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <include
            layout="@layout/view_position_number"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/step_possible_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Lorem ipsum dolor sit amet"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/step_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maecenas vel est volutpat, semper lectus sed, sagittis elit. Nunc mollis nisi sit amet ornare laoreet. Nam sollicitudin arcu non elit ultricies placerat. Morbi volutpat feugiat placerat."
                android:textColor="@color/colorSecondaryText"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/step_completed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:text=""
                android:textColor="@color/colorSecondaryText"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>